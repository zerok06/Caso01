# ==================================================
# CONFIGURACIÃ“N PARA DESARROLLO LOCAL CON GCP
# ==================================================
# Copia este archivo a .env y ajusta los valores

# --- Base de Datos LOCAL (Docker) ---
DATABASE_URL=mysql+pymysql://admin:supersecret@localhost:3306/ia_db
REDIS_URL=redis://localhost:6379/0

# --- GCP Services ---
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/caso01-gcp-key.json
GCP_REGION=us-central1
GCS_BUCKET_NAME=your-bucket-name

# --- Cloud Tasks (Opcional para local, necesita cola creada) ---
# CLOUD_TASKS_QUEUE=caso01-tasks
# CLOUD_TASKS_LOCATION=us-central1
# SERVICE_URL=http://localhost:8000

# --- LLM Provider ---
# Opciones: 'vertex' (Gemini) o 'openai'
LLM_PROVIDER=gemini
# OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# --- GCP Gemini API ---
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=8192

# --- GCP Document AI ---
DOCUMENT_AI_PROCESSOR_ID=your_processor_id_here
DOCUMENT_AI_LOCATION=us
DOCUMENT_AI_ENABLED=true

# --- GCP Natural Language ---
ENABLE_NATURAL_LANGUAGE=true

# --- RAG Service ---
RAG_SERVICE_URL=http://localhost:8080
RAG_SERVICE_ENABLED=true

# --- CORS ---
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# --- Logging ---
LOG_LEVEL=INFO
